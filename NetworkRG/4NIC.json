{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Environment": {
            "type": "string"
        },
        "Vnet": {
            "type": "string"
        },
        "SubscriptionID": {
            "type": "string"
        },
        "PublicIP-CrispJuniper": {
            "type": "string"
        },
        "PublicIP-JuniperPublic1": {
            "type": "string"
        },
        "PublicIP-JuniperPublic2": {
            "type": "string"
        },
        "PublicIP-CrispVPN": {
            "type": "string"
        },
        "SUB-JuniperPrivate": {
            "type": "string"
        },
        "SUB-JuniperPublic1": {
            "type": "string"
        },
        "SUB-VDS": {
            "type": "string"
        },
        "SUB-AKS": {
            "type": "string"
        },
        "SUB-AKSInternal": {
            "type": "string"
        },
        "NIC-JuniperPublic1": {
            "type": "string"
        },
        "NIC-JuniperPublic2": {
            "type": "string"
        },
        "NIC-CrispJuniper": {
            "type": "string"
        },
        "NSG-CrispJuniper": {
            "type": "string"
        },
        "NSG-AKS": {
            "type": "string"
        },
        "NSG-GITLab": {
            "type": "string"
        },
        "NSG-VDS": {
            "type": "string"
        },
        "RT-VDSRoute": {
            "type": "string"
        },
        "DNSmongo": {
            "type": "string"
        },
        "DNSstorage": {
            "type": "string"
        },
        "DNSredis": {
            "type": "string"
        },
        "Environment2": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('NIC-CrispJuniper'), parameters('Environment'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAddress": "10.8.0.4",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[concat('/subscriptions/', parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/publicIPAddresses/', parameters('PublicIP-CrispJuniper'), parameters('Environment'))]"
                            },
                            "subnet": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/virtualNetworks/',parameters('Vnet'), parameters('Environment'),'/subnets/', parameters('SUB-JuniperPrivate'), parameters('Environment'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": true
            }
        },
        {
            "name": "[concat(parameters('NIC-JuniperPublic1'), parameters('Environment'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAddress": "10.6.0.4",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[concat('/subscriptions/', parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/publicIPAddresses/', parameters('PublicIP-JuniperPublic1'), parameters('Environment'))]"
                            },
                            "subnet": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/virtualNetworks/',parameters('Vnet'), parameters('Environment'),'/subnets/', parameters('SUB-JuniperPublic1'), parameters('Environment'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": true
            }
        },
        {
            "name": "[concat(parameters('NIC-JuniperPublic2'), parameters('Environment'))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAddress": "10.2.0.5",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[concat('/subscriptions/', parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/publicIPAddresses/', parameters('PublicIP-JuniperPublic2'), parameters('Environment'))]"
                            },
                            "subnet": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/virtualNetworks/',parameters('Vnet'), parameters('Environment'),'/subnets/', parameters('SUB-VDS'), parameters('Environment'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": true,
                "networkSecurityGroup": {
                    "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-CrispJuniper'), parameters('Environment'))]"
                }
            }
        }
    ],
    "outputs": {}
}