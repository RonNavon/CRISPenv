{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Environment": {
            "type": "string"
        },
        "Vnet": {
            "type": "string"
        },
        "SubscriptionID": {
            "type": "string"
        },
        "PublicIP-CrispJuniper": {
            "type": "string"
        },
        "PublicIP-JuniperPublic1": {
            "type": "string"
        },
        "PublicIP-JuniperPublic2": {
            "type": "string"
        },
        "PublicIP-CrispVPN": {
            "type": "string"
        },
        "SUB-JuniperPrivate": {
            "type": "string"
        },
        "SUB-JuniperPublic1": {
            "type": "string"
        },
        "SUB-VDS": {
            "type": "string"
        },
        "SUB-AKS": {
            "type": "string"
        },
        "SUB-AKSInternal": {
            "type": "string"
        },
        "NIC-JuniperPublic1": {
            "type": "string"
        },
        "NIC-JuniperPublic2": {
            "type": "string"
        },
        "NIC-CrispJuniper": {
            "type": "string"
        },
        "NSG-CrispJuniper": {
            "type": "string"
        },
        "NSG-AKS": {
            "type": "string"
        },
        "NSG-GITLab": {
            "type": "string"
        },
        "NSG-VDS": {
            "type": "string"
        },
        "RT-VDSRoute": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[concat('CrispVPN', parameters('Environment'))]",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "vnetGatewayConfig",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/virtualNetworks/',parameters('Vnet'), parameters('Environment'),'/subnets/', 'GatewaySubnet')]"
                            },
                            "publicIPAddress": {
                                "id": "[concat('/subscriptions/', parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/publicIPAddresses/', parameters('PublicIP-CrispVPN'), parameters('Environment'))]"
                            }
                        }
                    }
                ],
                "sku": {
                    "name": "VpnGw1",
                    "tier": "VpnGw1"
                },
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "enableBgp": false,
                "activeActive": false,
                "vpnClientConfiguration": {
                    "vpnClientAddressPool": {
                        "addressPrefixes": [
                            "172.16.0.0/24"
                        ]
                    },
                    "vpnClientProtocols": [
                        "OpenVPN"
                    ],
                    "vpnAuthenticationTypes": [
                        "AAD"
                    ],
                    "vpnClientRootCertificates": [],
                    "vpnClientRevokedCertificates": [],
                    "radiusServers": [],
                    "vpnClientIpsecPolicies": [],
                    "aadTenant": "https://login.microsoftonline.com/d141ee51-674b-4090-9686-5f497621f783",
                    "aadAudience": "41b23e61-6c1e-4545-b367-cd054e0ed4b4",
                    "aadIssuer": "https://sts.windows.net/d141ee51-674b-4090-9686-5f497621f783/"
                },
                "vpnGatewayGeneration": "Generation1"
            }
        }
    ],
    "outputs": {}
}