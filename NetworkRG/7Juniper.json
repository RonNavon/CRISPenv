            "plan": {
                "name": "vsrx-azure-image-payg-b1",
                "product": "vsrx-next-generation-firewall-payg",
                "publisher": "juniper-networks"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B8ms"
