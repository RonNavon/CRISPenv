                "storageProfile": {
                    "imageReference": {
                        "publisher": "juniper-networks",
                        "offer": "vsrx-next-generation-firewall-payg",
                        "sku": "vsrx-azure-image-payg-b1",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat('CrispJuniper', parameters('Environment'), 'CrispJuniper-OsDisk')]",
