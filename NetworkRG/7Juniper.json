                        },
                        {
                            "id": "[concat('/subscriptions/', parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Network/networkInterfaces/', parameters('NIC-JuniperPublic2'), parameters('Environment'))]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2021-11-01",
            "name": "[concat('CrispJuniper', parameters('Environment'), '/AzureNetworkWatcherExtension')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('/subscriptions/', parameters('SubscriptionID'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Compute/virtualMachines/', 'CrispJuniper', parameters('Environment'))]"
            ],
            "properties": {
                "autoUpgradeMinorVersion": true,
