{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Environment": {
            "type": "string"
        },
        "SubscriptionID": {
            "type": "string"
        },
        "Vnet": {
            "type": "string"
        },
        "PublicIP-CrispJuniper": {
            "type": "string"
        },
        "PublicIP-JuniperPublic1": {
            "type": "string"
        },
        "PublicIP-JuniperPublic2": {
            "type": "string"
        },
        "PublicIP-CrispVPN": {
            "type": "string"
        },
        "SUB-JuniperPrivate": {
            "type": "string"
        },
        "SUB-JuniperPublic1": {
            "type": "string"
        },
        "SUB-VDS": {
            "type": "string"
        },
        "SUB-AKS": {
            "type": "string"
        },
        "SUB-AKSInternal": {
            "type": "string"
        },
        "NIC-JuniperPublic1": {
            "type": "string"
        },
        "NIC-JuniperPublic2": {
            "type": "string"
        },
        "NIC-CrispJuniper": {
            "type": "string"
        },
        "NSG-CrispJuniper": {
            "type": "string"
        },
        "NSG-AKS": {
            "type": "string"
        },
        "NSG-GITLab": {
            "type": "string"
        },
        "NSG-VDS": {
            "type": "string"
        },
        "RT-VDSRoute": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('Vnet'), parameters('Environment'))]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.1.0.0/16",
                        "10.2.0.0/16",
                        "10.4.0.0/24",
                        "10.5.0.0/24",
                        "10.6.0.0/24",
                        "10.7.0.0/24",
                        "10.8.0.0/24",
                        "10.9.0.0/24",
                        "10.11.0.0/16",
                        "10.12.0.0/24",
                        "10.13.0.0/24",
                        "10.30.0.0/16",
                        "10.40.0.0/16",
                        "10.50.0.0/24",
                        "10.60.0.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(parameters('SUB-AKS'), parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.1.0.0/16",
                            "networkSecurityGroup": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/Network',parameters('Environment'),'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-AKS'), parameters('Environment'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(parameters('SUB-AKSInternal'), parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.30.0.0/16",
                            "networkSecurityGroup": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/Network',parameters('Environment'),'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-AKS'), parameters('Environment'))]"
                            }
                        }
                    },
                    {
                        "name": "AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "10.13.0.0/24"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "10.2.1.0/24"
                        }
                    },
                    {
                        "name": "[concat('GITLab', parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.9.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/Network',parameters('Environment'),'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-GITLab'), parameters('Environment'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(parameters('SUB-JuniperPrivate'), parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.8.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/Network',parameters('Environment'),'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-CrispJuniper'), parameters('Environment'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(parameters('SUB-JuniperPublic1'), parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.6.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/Network',parameters('Environment'),'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-CrispJuniper'), parameters('Environment'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat('JuniperPublic2', parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.7.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/Network',parameters('Environment'),'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-CrispJuniper'), parameters('Environment'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat(parameters('SUB-VDS'), parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.2.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[concat('/subscriptions/',parameters('SubscriptionID'),'/resourceGroups/Network',parameters('Environment'),'/providers/Microsoft.Network/networkSecurityGroups/', parameters('NSG-VDS'), parameters('Environment'))]"
                            }
                        }
                    },
                    {
                        "name": "[concat('VDSSub', parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.12.0.0/24"
                        }
                    },
                    {
                        "name": "[concat('VnetIntegration', parameters('Environment'))]",
                        "properties": {
                            "addressPrefix": "10.2.2.0/24"
                        }
                    }
                ]
            }
        },
        {
            "name": "crisp.com",
            "type": "Microsoft.Network/dnsZones",
            "apiVersion": "2018-05-01",
            "location": "global",
            "properties": {
                "zoneType": "Public"
            }
        },
        {
            "name": "[concat(parameters('PublicIP-CrispJuniper'), parameters('Environment'))]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "name": "[concat(parameters('PublicIP-JuniperPublic1'), parameters('Environment'))]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "name": "[concat(parameters('PublicIP-JuniperPublic2'), parameters('Environment'))]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4
            }
        },
        {
            "name": "[concat(parameters('PublicIP-CrispVPN'), parameters('Environment'))]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4
            }
        },
    {
        "name": "[concat(parameters('RT-VDSRoute'), parameters('Environment'))]",
        "type": "Microsoft.Network/routeTables",
        "apiVersion": "2020-11-01",
        "location": "[resourceGroup().location]",
        "tags": {},
        "properties": {
            "routes": [
                {
                    "name": "To_SRX_300_LAN",
                    "properties": {
                        "addressPrefix": "92.200.0.0/16",
                        "nextHopType": "VirtualAppliance",
                        "nextHopIpAddress": "10.2.0.8"
                    }
                }
            ],
            "disableBgpRoutePropagation": true
        }
    }
    ],
    "outputs": {}
}