{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "EnvironmentName": {
      "type": "string"
    },
    "ApplicationRGname": {
      "type": "string"
    },
    "RonsUserID": {
      "type": "string"
    },
    "Region": {
      "type": "string"
    }
  },
  "variables": {
    "ReaderRole": "[concat(subscription().Id, '/providers/Microsoft.Authorization/roleDefinitions/9634362d-007e-4e55-9169-bd59c0552a61')]"
  },
  "resources": [
    {
      "name": "ReaderRole",
      "apiVersion": "2020-03-01-preview",
      "type": "Microsoft.Authorization/roleAssignments",
      "properties": {
        "roleDefinitionId": "[variables('ReaderRole')]",
        "principalId": "[parameters('RonsUserID')]",
        "ObjectType": "User",
        "scope": "[subscription().id]"
      }
    }
  ]
}