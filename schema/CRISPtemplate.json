{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "EnvironmentName": {
      "type": "string"
    },
    "ApplicationRGname": {
      "type": "string"
    },
    "RonsUserID": {
      "type": "string"
    },
    "Region": {
      "type": "string"
    }
  },
  "variables": {
    "ReaderRole": "[concat(subscription().Id, '/providers/Microsoft.Authorization/roleDefinitions/9634362d-007e-4e55-9169-bd59c0552a61')]"
  },
  "resources": [
    {
      "name": "OwnerRole",
      "apiVersion": "2019-01-01",
      "type": "Microsoft.Authorization/policyassignments",
      "properties": {
        "roleDefinitionId": "[variables('ReaderRole')]",
        "principalId": "[parameters('RonsUserID')]",
        "ObjectType": "User",
        "scope": "[subscription().id]"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "rgDeployment",
      "location": "westus",
      "subscriptionId": "[subscription().id]",
      "resourceGroup":"r",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Resources/resourceGroups",
              "apiVersion": "2021-04-01",
              "name": "[concat(parameters('ApplicationRGname'),'-',parameters('EnvironmentName'))]",
              "location": "[parameters('Region')]"
            }
          ]
        }
      }
    }
  ]
}